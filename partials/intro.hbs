            {{/for}} --}}
            {{!-- <button type="button" data-bs-target="#anunturi" data-bs-slide-to="4"></button> --}}
        </div>

        <div class="carousel-inner">
            {{!-- .carousel-item.active*10>img[src="https://picsum.photos/id/$/1920/1080" class="w-100 h-50" alt="Imagine $"] --}}
            <div class="carousel-item active"><img src="assets/images/Landing_page/1.jpg" alt="Imagine 1" class="w-100 h-50"></div>
            <div class="carousel-item active"><img src="assets/images/Landing_page/2.jpg" alt="Imagine 2" class="w-100 h-50"></div>
            <div class="carousel-item active"><img src="assets/images/Landing_page/3.jpg" alt="Imagine 3" class="w-100 h-50"></div>
            <div class="carousel-item active"><img src="assets/images/Landing_page/4.jpg" alt="Imagine 3" class="w-100 h-50"></div>
            <div class="carousel-item active"><img src="assets/images/Landing_page/5.jpg" alt="Imagine 2" class="w-100 h-50"></div>
            <div class="carousel-item active"><img src="assets/images/Landing_page/6.jpg" alt="Imagine 2" class="w-100 h-50"></div>
    
        </div>

        <!-- Left and right controls/icons -->
        <button class="carousel-control-prev" type="button" data-bs-target="#anunturi" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#anunturi" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

    <div class="col-md-1" style="margin: auto; flex-direction: column; margin-bottom: 10px; text-align:center; padding-top:2rem">
        <a href="/inscriere">
