    }

.button {
  display: inline-block;
  border-radius: 4px;
  background-color: #ffffff4c;
  border: none;
  color: #FFFFFF;
  text-align: center;
  font-size: 20px;
  padding: 20px;
  width: 30%;
  transition: all 0.5s;
  cursor: pointer;
  margin: 5px;
}

.button span {
  cursor: pointer;
  display: inline-block;
  position: relative;
  transition: 0.5s;
}

.button span:after {
  content: '\00bb';
  position: absolute;
  opacity: 0;
  top: 0;
  right: -20px;
  transition: 0.5s;
}

.button:hover span {
  padding-right: 25px;
}

.button:hover span:after {
  opacity: 1;
  right: 0;
}

@media only screen and (max-width: 800px) {
    .button{
        width: 70%;
    }
}
</style>

<div class="container-carousel m-0 p-5 row">

    {{#if title}}
    <h1 class="carousel-title m-5">
