<style>
    h1, h2{
        color:rgba(253, 229, 255, 0.733);
    }
    article-title{
        margin-top: 1.2rem;
    }
    .container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 100vw;
    max-width: 1024px;
    margin: 0 auto;
    }

    .card-grid {
    margin-top: 3em;
    --auto-grid-min-size: 300px;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(var(--auto-grid-min-size), 1fr));
    grid-gap: 2rem 0rem;
    grid-auto-rows: 1fr;
    }

    .card-grid-2 {
    margin-top: 3em;
    --auto-grid-min-size: 300px;
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    row-gap: 3rem;
    }

    .card {
    box-shadow: 0 4px 8px 0 rgb(0 0 0 / 20%);
    width: 300px;
    margin: auto;
    text-align: center;
    border-radius: 10px;
    transition-duration: 400ms;
    height: 100%;
    }

    .card img {
    max-width: 300px;
    width: 100%;
    height: 225px;
    object-fit: cover;
    border-radius: 10px;
    object-position: center;
    }

    .card .card-body {
    text-align: center;
    padding: 1em 2em;
    }

    .card .card-body h2 {
    margin: 0 0 .5em;
    font-weight: 700;
    font-size: 2rem;
    }

    .card .card-body p.role {
        color: #B50000;
    }

    .icon:hover {
        color: #B50000;
    }
    .card-img {
    background-color: var(--secondary-transparent);
    background-size: cover;
    width: 300px;
    height: 225px;
    align-self: center;
    justify-self: center;
    background-position: center;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    }

